@model Product

@{
    var popularClass = Model.ProductCategories.Count > 2 ? "popular" : "";
    var products = Model.ProductCategories;

}

@section Categories
{
    @await Component.InvokeAsync("Categories")
}

@section MessageBox
{
    <div class="alert alert-warning text-center m-0">You have a message!</div>
}

@section Jumbotron
{
    <partial name="_header">
}


@section Scripts
{

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

}





@*Products come here.*@


@if (products.Count == 0)
{
    //urun yok.
    @await Html.PartialAsync("_noproduct")
}
else
{
    <div class="row">



        @foreach (var product in products)
        {



            <div class="col-md-4 mt-2">
                @await Html.PartialAsync("_product", product)
            </div>
        }
    </div>

}


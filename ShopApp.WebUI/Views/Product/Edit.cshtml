@model Product

    <h4>@ViewBag.Title</h4>
<form action="/product/Edit" method="POST">
<div class="row">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <div class="col-md-6">
        <div class="form-group">
            <label for="name">Name</label>
            <input asp-for="Name" value="@Model.Name" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="price">Price</label>
            <input asp-for="Price" value="@Model.Price"  class="form-control" />
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="imageUrl">Image URL</label>
            <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="CategoryId">Category Id</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                <option selected disabled>Please Choose any</option>

                @*<option value="1">Phones</option>
                    <option value="2">PC</option>
                    <option value="3">Laptop</option>
                    <option value="4">Electronic</option>*@
            </select>
        </div>
    </div>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
</div>
<button type="submit" class="btn btn-primary">Submit</button>
</form>
@model ProductViewModel

@{
    var popularClass = Model.Products.Count > 2 ? "popular" : "";
    var products = Model.Products;
    var categories = Model.Categories;
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>List</title>

    <style>
        .popular {
            color: green;
            font-weight: bold;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("_navbar")
    @*@await Html.PartialAsync("_header")*@
    <partial name="_header">

    <main>
        <div class="container">

            <div class="row">
                <div class="col-md-4">
                    @*Category List comes here.*@
                  
                    @await Html.PartialAsync("_categories", categories) 
                </div>

                <div class="col-md-8">
                    @*Products come here.*@

                    <div class="row">
                        <div class="col-md-12">
                            @*<h1>@categoryName</h1>*@
                        </div>

                    </div>
                    @if (Model.Products.Count == 0)
                    {
                        //urun yok.
                        @await Html.PartialAsync("_noproduct")
                    }
                    else
                    {
                        <div class="row">



                            @foreach (var product in products)
                            {

                               

                                    <div class="col-md-4 mt-2">
                                        @await Html.PartialAsync("_product", product)
                                    </div>


                                


                            }
                        </div>

                    }
                </div>
            </div>



            




            @*<div>
            <p>@Model.Products[0].Name</p>
            <p>@Model.Products[0].Price</p>
            <p>@Model.Products[0].Description</p>
        </div>
        <div>
            <p>@Model.Products[1].Name</p>
            <p>@Model.Products[1].Price</p>
            <p>@Model.Products[1].Description</p>
        </div>*@
</div>
        </div>
    </main>
</body>
</html>